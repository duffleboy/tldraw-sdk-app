{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "./types/global"]
  },
  "include": ["pages/**/*.tsx", "types/**/*.d.ts"],
  "exclude": ["node_modules"]
}
